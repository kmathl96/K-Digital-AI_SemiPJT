<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
							"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.student">
	<select id="selectUser" resultType="com.kd.classroom.bean.Student" parameterType="String">
		<![CDATA[
		select * from classroom_student
		where
		id=#{id}
		]]>
	</select>
	<insert id="insertUser" parameterType="com.kd.classroom.bean.Student">
		<![CDATA[
		insert into classroom_student(id,password,name,profile_img)
		values(#{id},#{name},#{password},#{profile_img})
		]]>
	</insert>
</mapper>
